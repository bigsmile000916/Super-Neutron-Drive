{
  "name": "Super Neutron Drive",
  "short_name": "N-Drive",
  "description": "Code editor for local, cloud, and remote development",
  "version": "14.5.2",
  
  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },
  
  "icons": {
    "128": "img/icon-128.png",
    "64": "img/icon-64.png"
  },
  
  "offline_enabled": true,
  
  "permissions": [
    "fullscreen",
    "storage",
    {"fileSystem": ["write", "retainEntries", "directory"]}
  ]
}